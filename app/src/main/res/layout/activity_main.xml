<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Computer Power On"
        android:id="@+id/CPOn"
        android:layout_marginTop="57dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:onClick="onCPOnClicked"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Computer Power Off"
        android:id="@+id/CPOff"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/CPOn"
        android:layout_alignRight="@+id/CPOn"
        android:layout_alignEnd="@+id/CPOn"
        android:onClick="onCPOffClicked"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Light Power On"
        android:id="@+id/LPOn"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="onLPOnClicked"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Light Power Off"
        android:id="@+id/LPOff"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/LPOn"
        android:layout_alignRight="@+id/LPOn"
        android:layout_alignEnd="@+id/LPOn"
        android:onClick="onLPOffClicked"/>

</RelativeLayout>
